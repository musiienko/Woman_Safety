<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionnaire_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="543dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_violence"
                android:textAppearance="@style/TextAppearance.AppCompat" />


            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Фізичне насильство" />

            <android.support.v7.widget.CardView
                android:id="@+id/surveyCard_1"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="347dp"
                    android:layout_height="match_parent"
                    android:text="@string/description_physical_violence" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Психологічне насильство" />

            <android.support.v7.widget.CardView
                android:id="@+id/surveyCard_2"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="354dp"
                    android:layout_height="177dp"
                    android:text="@string/description_psychological_violence" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Сексуальне насильство" />

            <android.support.v7.widget.CardView
                android:id="@+id/surveyCard_3"
                android:layout_width="345dp"
                android:layout_height="123dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_sex_violence" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Економічне насильство" />

            <android.support.v7.widget.CardView
                android:id="@+id/surveyCard_4"
                android:layout_width="345dp"
                android:layout_height="99dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_economic_violence" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
